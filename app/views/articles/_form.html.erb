<%#= # Partial are defined by beginning the filename with an underscore %>

<% if @article.errors.any? %>
  <h3> The following reasons prevented the article from being created</h3>
  <ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
  <% end %>
  </ul>
<% end %>


<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "Description goes here..." %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-10" align="left">  
          <%= f.submit "Submit", class: "btn"  %>
        </div>
      </div>
    <% end %>
    <div align="center">
      <%= link_to "[ Back to articles listing ]", articles_path %><br/><br/>
    </div>
        
  </div>
</div>